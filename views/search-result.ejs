<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <ul>
    <% if (locals.users) {%>
      <% users.forEach(user => { %>
        <li>ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %>, Email: <%= user.email %> <%if(user.age){%>, Age: <%= user.age %> <% } %></li>
        <% if(user.bio){ %>
        About me:
        <br>
        <%= user.bio %>
        <br>
        <% } %>
          <a href="/<%= user.id %>/update">Update</a>
          <form action="/<%= user.id %>/delete" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
          </form>
      <% }); %>
    <% }else{ %>
        User not found
    <% } %>
  </ul>
  <a href="/">Back to home</a>
  <form action="/search" method="GET">
    <label for="userName">Find user by name</label>
    <input type="text" name="userName" id="userName">
    <label for="userEmail">Find user by email</label>
    <input type="text" name="userEmail" id="userEmail">
    <button type="submit">Search</button>
  </form>
</body>
</html>